<Window
    x:Class="Lan.Shapes.TestApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lan.Shapes.TestApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sketchBoard="clr-namespace:Lan.SketchBoard;assembly=Lan.SketchBoard"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Background="Aquamarine" Row="0">

            <Image
                Width="1000"
                Height="828"
                Source="D:\HelloMaster\GeometryShapesSketcher\Test\Lan.Shapes.TestApp\reference.png"
                Stretch="None" />
            <Viewbox>

                <sketchBoard:SketchBoard
                    Width="5000"
                    Height="4000"
                    Background="Transparent"
                    SketchBoardDataManager="{Binding SketchBoardDataManager}" />
            </Viewbox>
        </Grid>

        <Button
            Grid.Row="1"
            Command="{Binding SelectOneShapeCommand}"
            Content="select one shape" />

        <Button
            Grid.Row="2"
            Command="{Binding GetShapeInfoCommand}"
            Content="get shape inform" />
    </Grid>
</Window>